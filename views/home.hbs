  <div class="last-post-wrapper">
    <h2>Актуално</h2>
    <div class="post-wrapper">
      <h2 class="post-title">{{post.title}}</h2>
      {{#if post.imageURL}}
        <img src={{post.imageURL}} alt="" class="post-image" />
      {{/if}}
      <ul class="post-description-list">
        {{#each post.description}}
        <li>
          <p>{{this}}</p>
        </li>
        {{/each}}
